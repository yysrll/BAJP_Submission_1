<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.yusril.bajp_submission_1">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:parentActivityName=".HomeActivity"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.BAJP_submission_1"
        tools:ignore="AllowBackup">
        <activity android:name=".ui.favorite.activity.FavoriteActivity"></activity>
        <activity android:name=".ui.splashscreen.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".ui.home.HomeActivity" />

        <activity
            android:name=".ui.detail.DetailActivity"
            android:theme="@style/Theme.detail" />
        <activity android:name=".ui.home.HomeActivity" />
    </application>

</manifest>